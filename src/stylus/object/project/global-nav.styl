.p-global-nav {
  bs-font-size-line-height(14px);

  .{bs-prefix}c-menu__submenu {
    background-color: rgba(bs-color-black, .8);
  }

  .{bs-prefix}c-menu__subitem {
    +bs-hover() {
      background-color: rgba(#fff, .05);
    }
  }
}

.{bs-prefix}l-header--is-scrolled {
  .p-global-nav {
    .{bs-prefix}c-menu__item {
      +bs-hover() {
        background-color: rgba(#fff, .05);
      }
    }
  }
}
