.p-media {
  @extend .{bs-prefix}c-card;
  background-color: transparent;
  box-shadow: none;

  &__figure {
    bs-margin(0, 0, .5);

    &--circle {
      width: 51%;
      margin-right: auto;
      margin-left: auto;
      border-radius: 100%;
      position: relative;
      z-index: 0; // for Chrome

      &:before {
        content: '';
        display: block;
        padding: 100% 0 0;
      }

      > img {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        height: 100%;
        width: auto;
        max-width: none;
      }
    }
  }

  &__body {
    margin: 0;
    padding: 0;

    > :first-child {
      margin-top: 0;
    }
  }

  &__title {
    margin: 0;
    bs-font-size-line-height(bs-base-font-size);
    font-weight: bold;
    padding: 0;
  }

  &__lead {
    margin: 0;
    padding: 0;
    color: bs-color-gray;
  }

  &__content {
    bs-margin(.5, 0, 0);
    padding: 0;
  }
}
