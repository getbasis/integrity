.{_prefix}c-btn {
  _transition(background-color);
  border: 2px solid color-accent;
  color: color-accent;
  font-weight: bold;
  _padding(.5, 1);

  +_hover() {
    background-color: color-main;
  }

  &--ghost {
    border-color: #fff;
    color: #fff;
  }

  &--primary {
    border-color: color-primary;
    color: color-primary;

    +_hover() {
      background-color: _light(color-primary);
    }
  }

  &--success {
    border-color: color-success;
    color: color-success;

    +_hover() {
      background-color: _light(color-success);
    }
  }

  &--info {
    border-color: color-info;
    color: color-info;

    +_hover() {
      background-color: _light(color-info);
    }
  }

  &--warning {
    border-color: color-warning;
    color: color-warning;

    +_hover() {
      background-color: _lightest(color-warning);
    }
  }

  &--danger {
    border-color: color-danger;
    color: color-danger;

    +_hover() {
      background-color: _lightest(color-danger);
    }
  }
}
